@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid">
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-md-3 col-lg-2 sidebar">

            <h5 class="fw-bold mb-3">Dashboard Menu</h5>

            <a class="side-link" href="@Url.Action("Create", "Feedback")">📝 Give Feedback</a>

            <a class="side-link" href="@Url.Action("Index", "Feedback")">💬 Reviews</a>

            <hr>

            <button id="toggleTheme" class="btn theme-toggle w-100 mb-3">
                Day Night Mode
            </button>

            <button class="btn btn-outline-light w-100"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasDemo">
                📖 Demo Content
            </button>

        </div>

        <div class="col-md-9 col-lg-10 p-4">

            <!-- PROFILE CARD -->
            <div class="glass-card neon p-3 d-flex align-items-center gap-3">
                <img class="profile-img" src="~/profileimage/vaibhav.jpg">
                <div>
                    <h5 class="fw-bold mb-1">Vaibhav Srivastava</h5>
                    <span class="small">Jr .NET Developer</span><br />
                    <span class="small">Udaipur, Rajasthan</span>
                </div>
            </div>

            <!-- BLOG CARDS -->
            <div class="glass-card blog-card">
                <img src="https://picsum.photos/seed/blog1/600/200" class="w-100 mb-2" />
                <div class="card-body">
                    <h5 class="fw-bold">How Users Share Feedback</h5>
                    <p class="text-muted small">
                        Users can submit reviews, suggestions, and feature ideas.
                    </p>
                    <button class="btn btn-sm btn-primary"
                            data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasDemo">
                        Read More
                    </button>
                </div>
            </div>

            <div class="glass-card blog-card">
                <img src="https://picsum.photos/seed/blog2/600/200" class="w-100 mb-2" />
                <div class="card-body">
                    <h5 class="fw-bold">Community Feedback Highlights</h5>
                    <p class="text-muted small">
                        See what users think about new updates.
                    </p>
                    <button class="btn btn-sm btn-primary"
                            data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasDemo">
                        Read More
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- OFFCANVAS -->
<div class="offcanvas offcanvas-end text-dark" tabindex="-1" id="offcanvasDemo">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Demo Feedback</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body">
        <p>This demo shows how users submit reviews & suggestions.</p>
        <ul>
            <li>⭐️⭐️⭐️⭐️⭐️ Excellent experience</li>
            <li>⭐️⭐️⭐️⭐ Great UI improvements</li>
            <li>⭐️⭐️⭐ Needs more customization</li>
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const body = document.body;
    const themeButton = document.getElementById("toggleTheme");

    body.classList.remove("light");

    themeButton.addEventListener("click", () => {
        body.classList.toggle("light");

        themeButton.innerText =
            body.classList.contains("light")
                ? "🌙 Day Mode"
                : "🟢 Night Mode";
    });
</script>
