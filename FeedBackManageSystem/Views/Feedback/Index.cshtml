@model IEnumerable<FeedBackManageSystem.Models.FeedbackViewModel>
@using FeedBackManageSystem.HelperClasses;
@{
    ViewBag.Title = "Feedback Reviews";
}

<style>
    body {
        background: none;
        color: black;
    }

    .action-menu {
        position: relative;
        display: inline-block;
    }

    .action-toggle {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        border: none;
        font-weight: bold;
        background: black;
        color: white;
        cursor: pointer;
    }

    .menu-items {
        display: none;
        position: absolute;
        right: 0;
        z-index: 5;
        background: white;
        border: 1px solid #ccc;
        border-radius: 6px;
        padding: 6px;
        min-width: 70px;
    }

        .menu-items.show {
            display: block;
        }

        .menu-items a {
            display: block;
            text-decoration: none;
            padding: 4px;
            font-size: 18px;
        }

            .menu-items a.edit {
                color: green;
            }

            .menu-items a.delete {
                color: red;
            }
</style>
<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3"> 
        <h2 class="fw-bold text-black mb-0">Feedback Reviews</h2> 
        <a class="btn btn-sm px-3 py-1" style="background:black; color:white;" href="@Url.Action("Index", "Home")"> Back </a> </div>

    <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Gender</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model!=null){
            foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.Gender</td>
                       <td>
                            @Html.Raw(
                                item.IsActive
                                ? "<div style='color:green;'>Active</div>"
                                : "<div style='color:red;'>Inactive</div>"
                            )
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@Encryption.EncyptNumber(item.Id)"
                               class="btn btn-warning btn-sm">Edit</a>

                    <a asp-action="Delete" asp-route-id="@Encryption.EncyptNumber(item.Id)"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure?');">
                               Delete
                            </a>
                        </td>
                    </tr>
            }
      }
            else
            {
                <tr>
                    <td>No data</td>
                </tr>
            }
        </tbody>
</table>
</div>
