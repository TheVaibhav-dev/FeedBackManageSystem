@model FeedBackManageSystem.Models.FeedbackViewModel
@{
    ViewBag.Title = "Create Feedback";
}

<div class="wrapper">
    <div class="form-card">

        <button id="modeToggle" class="theme-btn">🌙</button>

        <h3 class="form-title">Feedback Form ✍️</h3>

        @using (Html.BeginForm("Create", "Feedback", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
        {
            <div class="row">

                <!-- Name -->
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Name,
                    new { @class = "form-control", placeholder = "Enter full name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <!-- Mobile -->
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.MobileNumber, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.MobileNumber,
                                new { @class = "form-control", placeholder = "Enter mobile number" })
                @Html.ValidationMessageFor(m => m.MobileNumber, "", new { @class = "text-danger" })
            </div>

            <!-- Address - full width -->
            <div class="col-12 mb-3">
                @Html.LabelFor(m => m.Address, new { @class = "form-label fw-semibold" })
                @Html.TextAreaFor(m => m.Address,
                                new { @class = "form-control", rows = 3, placeholder = "Enter address" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>

            <!-- Gender -->
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Gender, new { @class = "form-label fw-semibold" })
                @Html.DropDownListFor(
                                m => m.Gender,
                                new SelectList(new[] { "Male", "Female" }),
                                "-- Select Gender --",
                                new { @class = "form-control" }
                                )
            </div>

            <!-- Image Upload -->
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.ImageFile, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.ImageFile,
                                new { type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "text-danger" })
            </div>

        </div>

        <!-- Buttons on same line -->
        <div class="d-flex justify-content-between mt-2">
            <button type="submit" class="btn btn-sm px-4 bg-body text-bg-light">Submit Feedback</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-sm px-3" style="color:white;background:black;">Back</a>
        </div>
                }
    </div>
</div>


<script>
    const body = document.body;
    const toggleBtn = document.getElementById("modeToggle");

    body.classList.remove("light");
    toggleBtn.innerText = "🌙";

    toggleBtn.addEventListener("click", () => {
        body.classList.toggle("light");
        toggleBtn.innerText = body.classList.contains("light") ? "☀️" : "🌙";
    });
</script>
