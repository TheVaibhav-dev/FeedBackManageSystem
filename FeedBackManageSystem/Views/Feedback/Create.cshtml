@model FeedBackManageSystem.Models.FeedbackViewModel
@{
    ViewBag.Title = "Create Feedback";
}

<style>

    :root {
        --light-bg: linear-gradient(135deg,#4e73df,#1cc88a);
        --dark-bg: #C5B4E3;
        --light-card: #ffffff;
        --dark-card: #111322;
        --light-text: #000;
        --dark-text: #e6e6f2;
    }

    body {
        background: var(--dark-bg);
        color: var(--dark-text);
        font-family: 'Segoe UI', sans-serif;
        transition: .4s;
    }

        /* ---------- LIGHT MODE ---------- */
        body.light {
            background: #e9ecff;
            color: var(--light-text);
        }

    .feedback-wrapper {
        max-width: 650px;
        margin: 40px auto;
    }

    .feedback-card {
        background: #F0E2B6;
        color: var(--dark-text);
        border-radius: 18px;
        padding: 28px 32px;
        box-shadow: 0 15px 35px rgba(0,0,0,.35);
        transition: .35s;
    }

    body.light .feedback-card {
        background: var(--light-card);
        color: var(--light-text);
        box-shadow: 0 15px 35px rgba(0,0,0,.18);
    }

    .feedback-card:hover {
        transform: translateY(-3px);
    }

    .form-title {
        font-size: 26px;
        font-weight: 700;
        color: #4e73df;
        margin-bottom: 8px;
    }

    label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 10px;
    }

    /* ---------- BUTTON ---------- */
    .btn-submit {
        width: 100%;
        padding: 10px;
        border-radius: 12px;
        font-weight: 600;
        transition: .25s;
    }

    /* dark mode button */
    body:not(.light) .btn-submit {
        background: #4e73df;
        border-color: #4e73df;
        color: #fff;
    }

    /* light mode button */
    body.light .btn-submit {
        background: #000;
        border-color: #000;
        color: #fff;
    }

    /* ---------- DAY / NIGHT TOGGLE ICON ---------- */
    .theme-toggle {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 10px;
    }

    .theme-btn {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        border: 1px solid rgba(255,255,255,.35);
        background: transparent;
        font-size: 18px;
        cursor: pointer;
        transition: .3s;
        color: #fff;
    }

    body.light .theme-btn {
        border-color: rgba(0,0,0,.45);
        color: #000;
        background: rgba(255,255,255,.7);
    }

</style>


<div class="feedback-wrapper">

    <div class="theme-toggle">
        <button id="modeToggle" class="theme-btn">
            🌙
        </button>
    </div>

    <div class="feedback-card">

        <h3 class="form-title">Feedback Form ✍️</h3>

        @using (Html.BeginForm("Create", "Feedback", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.Name,new{@style="color:black"})
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.MobileNumber, new { @style = "color:black" })
                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", placeholder = "Enter mobile number" })
                @Html.ValidationMessageFor(m => m.MobileNumber, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Address, new { @style = "color:black" })
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 3, placeholder = "Enter address" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Gender, new { @style = "color:black" })
                @Html.DropDownListFor(m => m.Gender,new SelectList(new[] { "Male", "Female" }),"-- Select Gender --",new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ImageFile, new { @style = "color:black" })
            @Html.TextBoxFor(m => m.ImageFile,new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-submit">
            Submit Feedback
        </button>
                }
    </div>
</div>


<script>
    const body = document.body;
    const toggleBtn = document.getElementById("modeToggle");

    body.classList.remove("light");
    toggleBtn.innerText = "🌙";

    toggleBtn.addEventListener("click", () => {

        body.classList.toggle("light");

        toggleBtn.innerText = body.classList.contains("light")
            ? "☀️"
            : "🌙";
    });
</script>
