@model IEnumerable<FeedBackManageSystem.Models.UserBlogViewModel>

@{
    ViewBag.Title = "Welcome";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    /* ================= THEME VARIABLES ================= */
    :root {
        --bg-main: #fff;
        --text-main: #000;
        --nav-bg: #ffc266;
        --footer-bg: #ffc266;
    }

    body.dark {
        --bg-main: #000;
        --text-main: #fff;
        --nav-bg: #000;
        --footer-bg: #000;
    }

    /* ================= GLOBAL ================= */
    body {
        background-color: var(--bg-main);
        color: var(--text-main);
        scroll-behavior: smooth;
        transition: background-color .3s ease, color .3s ease;
    }

    /* ================= NAVBAR ================= */
    .navbar-wrapper {
        background-color: var(--nav-bg);
        width: 100%;
    }

    .navbar {
        background-color: transparent !important;
    }

    .navbar-brand {
        font-weight: bold;
        color: var(--text-main) !important;
    }

    /* ================= NAV BUTTONS ================= */
    .nav-action,
    .mode-btn {
        padding: 6px 14px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        transition: all .3s ease;
    }

    body:not(.dark) .nav-action, 
    body:not(.dark) .mode-btn {
        background-color: #000;
        color: #fff;
    }

    body.dark .nav-action,
    body.dark .mode-btn {
        background-color: #fff;
        color: #000;
    }

    .nav-action:hover,
    .mode-btn:hover {
        opacity: .85;
    }

    .mode-btn {
        font-size: 18px;
        cursor: pointer;
    }

    /* ================= CAROUSEL ================= */
    .hero-carousel {
        margin-top: 70px;
    }

    .carousel-item {
        min-height: 320px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--bg-main);
    }

    .carousel-content {
        text-align: center;
        max-width: 800px;
        padding: 40px;
    }

        .carousel-content h1 {
            font-weight: bold;
        }

    /* ================= SECTIONS ================= */
    .section-title {
        font-weight: bold;
        margin-bottom: 30px;
    }

    /* ================= FEATURE CARDS ================= */
    .feature-card {
        background-color: #eee;
        color: var(--text-main);
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,.1);
        transition: transform .45s ease, box-shadow .45s ease;
        cursor: pointer;
    }

        .feature-card:hover {
            transform: scale(1.08);
            box-shadow: 0 18px 35px rgba(0,0,0,0.2);
        }

    body.dark .feature-card {
        border-color: rgba(255,255,255,.2);
    }

        body.dark .feature-card:hover {
            box-shadow: 0 18px 35px rgba(255,255,255,.2);
        }

    /* ================= BLOG TABLE ================= */
    .blog-row:hover {
        background-color: #ddd;
        cursor: pointer;
    }

    body.dark .blog-row:hover {
        background-color: #222;
    }

    /* ================= FOOTER ================= */
    footer {
        background-color: #eee;
        color: var(--text-main);
        padding: 20px;
        text-align: center;
    }
</style>

<!-- ================= NAVBAR ================= -->


<!-- ================= CAROUSEL ================= -->
<div id="carouselExampleAutoplaying"
     class="carousel slide carousel-fade hero-carousel"
     data-bs-ride="carousel"
     data-bs-interval="2500">

    <div class="carousel-inner">

        <div class="carousel-item active">
            <div class="carousel-content">
                <h1>Welcome to Feedback Portal</h1>
                <p>Real blogs • Real experiences • Trusted ratings</p>
            </div>
        </div>

        <div class="carousel-item">
            <div class="carousel-content">
                <h1>Share Your Experience</h1>
                <p>Your voice helps others grow</p>
            </div>
        </div>

        <div class="carousel-item">
            <div class="carousel-content">
                <h1>Read • Rate • React</h1>
                <p>Discover insights from real users</p>
            </div>
        </div>

    </div>

    <button class="carousel-control-prev" type="button"
            data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>

    <button class="carousel-control-next" type="button"
            data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- ================= ABOUT ================= -->
<section class="container mt-5 text-center">
    <h2 class="section-title">Why This Portal?</h2>
    <p>
        A platform where users share real experiences through blogs
        and help others make informed decisions.
    </p>
</section>

<!-- ================= BENEFITS ================= -->
<section class="container mt-5">
    <div class="row text-center g-4">

        <div class="col-md-4">
            <div class="feature-card h-100 p-4 animate__animated animate__fadeInUp">
                <h5>📝 User Blogs</h5>
                <p>Read blogs written by real users</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card h-100 p-4 animate__animated animate__fadeInUp animate__delay-1s">
                <h5>⭐ Ratings</h5>
                <p>Experience based star ratings</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card h-100 p-4 animate__animated animate__fadeInUp animate__delay-2s">
                <h5>🔐 Secure Roles</h5>
                <p>Visitor • User • Admin</p>
            </div>
        </div>

    </div>
</section>

<!-- ================= BLOG TABLE ================= -->
<section id="blogs" class="container mt-5">
    <h3 class="section-title">Latest Blogs</h3>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Subject</th>
                <th>Rating</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr class="blog-row"
                    onclick="location.href='@Url.Action("Index", "Home", new { id = blog.Id })'">
                    <td>@blog.Title</td>
                    <td>@blog.Subject</td>
                    <td>@blog.StarRating ⭐</td>
                    <td>@blog.DateCreated.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    
    setTimeout(() => {
        document.getElementById("blogs")
            .scrollIntoView({ behavior: "smooth" });
    }, 8000);
</script>
