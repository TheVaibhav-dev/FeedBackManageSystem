@using FeedBackManageSystem.Enum
@using FeedBackManageSystem.HelperClasses
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        :root {
            --nav-bg: #ffc266;
        }

        body.dark {
            --text-main: #fff;
        }
        body {
            background-color: var(--bg-main);
            color: var(--text-main);
            scroll-behavior: smooth;
            transition: background-color .3s ease, color .3s ease;
        }
        .navbar-wrapper {
            background-color: var(--nav-bg);
            width: 100%;
        }

        .navbar {
            background-color: transparent !important;
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--text-main) !important;
        }

        .nav-action {
            background: #000;
            color: #fff;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            transition: .3s;
        }

            .nav-action:hover {
                opacity: .85;
            }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FeedBackManageSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/glass.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="navbar-wrapper fixed-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("MyVisitor", "Visitor")">
                    Daily Blogs
                </a>

                <div class="d-flex gap-2">
                        
                    @* USER LOGGED IN *@
                    @if (ProjectSession.UserType !=null)
                    {
                            if (ProjectSession.UserType == UserType.Author)
                            {
                                <a href="@Url.Action("Dashboard", "UserBlog")" class="btn btn-dark btn-sm">
                                    Dashboard
                                </a>
                                <a href="@Url.Action("AddBlogs", "UserBlog")" class="btn btn-dark btn-sm">
                                    <i class="fa fa-plus"></i> Add Blog
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-dark btn-sm">
                                    Dashboard
                                </a>
                            }
                        <a href="@Url.Action("Logout", "User")" class="btn btn-danger btn-sm">
                            Logout
                        </a>
                    }
                    else
                    {
                        <button id="modeToggle" class="mode-btn">🌙</button>

                        <a href="@Url.Action("Login", "User")" style="text-decoration:none;" class="nav-action btn-sm">
                            Login
                        </a>

                        <a href="@Url.Action("Create", "User")" style="text-decoration:none;" class="nav-action btn-sm">
                            New User
                        </a>
                    }
                </div>
            </div>
        </nav>
        </div>
    </header> 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>© @DateTime.Now.Year Feedback Portal | All Rights Reserved</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        const toggleBtn = document.getElementById("modeToggle");

        toggleBtn.addEventListener("click", () => {
            const isDark = document.body.classList.toggle("dark");

            toggleBtn.innerText = isDark ? "☀️" : "🌙";

            document.querySelectorAll("thead").forEach(thead => {

                if (isDark) {
                    thead.classList.remove("table-dark");
                    thead.classList.add("table-light");
                } else {
                    thead.classList.remove("table-light");
                    thead.classList.add("table-dark");
                }
            });
        });

        toastr.options = {
            positionClass: "toast-top-right",
            closeButton: true,
            progressBar: true,
            timeOut: 4000
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["Error"] != null)
    {
        <script>
            toastr.error("@Html.Raw(TempData["Error"])");
        </script>
    }

    @if (TempData["Success"] != null)
    {
        <script>
            toastr.success("@Html.Raw(TempData["Success"])");
        </script>
    }

</body>
</html>
