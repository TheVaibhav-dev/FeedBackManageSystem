@model UserViewModel
@{
    ViewBag.Title = "New User";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>New User Registration</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <style>
        body {
            background: #fff;
            margin: 0;
            font-family: "Segoe UI", sans-serif;
        }

        /* Page wrapper */
        .page-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Top highlight text */
        .page-highlight {
            position: absolute;
            top: 30px;
            width: 100%;
            text-align: center;
            font-size: 1.1rem;
            font-weight: 600;
            color: #444;
        }

        /* Main card */
        .register-card {
            max-width: 950px;
            width: 100%;
            background: #eee;
            border-radius: 18px;
            box-shadow: 0 25px 60px rgba(0,0,0,.2);
            overflow: hidden;
        }

        /* Left image section */
        .register-left {
            height: 440px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url("/images/NewUser1.png");
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* Right form section */
        .register-right {
            padding: 40px;
        }

        .form-control {
            padding: 12px;
            border-radius: 8px;
        }

        .input-group-text {
            background: #ff8c00;
            color: #fff;
            border: none;
        }

        .btn-register {
            background: #ff8c00;
            color: #fff;
            font-weight: 600;
            border-radius: 8px;
            padding: 12px;
            width: 100%;
            border: none;
        }

            .btn-register:hover {
                background: #e67e00;
            }
    </style>
</head>

<body>

    <div class="page-wrapper">

        <div class="page-highlight">
            🚀 Join the Daily Blogs channel & Share Your Experience
        </div>

        <div class="register-card">
            <div class="row g-0">

                <!-- LEFT IMAGE -->
                <div class="col-md-6">
                    <div class="register-left"></div>
                </div>

                <!-- RIGHT FORM -->
                <div class="col-md-6 register-right">

                    <h4 class="fw-bold mb-4" style="color:#e67e00;">New User Registration</h4>

                    @using (Html.BeginForm("Create", "User", FormMethod.Post))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Emial, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Emial, new { @class = "form-control", placeholder = "Email address" })
                            @Html.ValidationMessageFor(m => m.Emial, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.PasswordHash, new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.PasswordHash, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.UserType, new { @class = "form-label fw-semibold" })

                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-users"></i>
                                </span>

                                @Html.DropDownListFor(
                                m => m.UserType,
                                                        new SelectList(new[]
                                                        {
                                                        new { Value = "2", Text = "Author" },
                                                        new { Value = "3", Text = "Admin" }
                                                        }, "Value", "Text"),
                                                        "-- Select User Type --",
                                                        new { @class = "form-control" })
                        </div>

                        @Html.ValidationMessageFor(m => m.UserType, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn-register">
                        Create Account
                    </button>
                                        }
                </div>
            </div>
        </div>

    </div>

</body>
</html>
